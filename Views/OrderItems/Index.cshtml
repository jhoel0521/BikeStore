@model IEnumerable<BikeStore.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-info">Añadir detalle a un pedido</a>
</div>
<div class="d-flex justify-content-end">
    <form asp-action="Index" method="get" class="row" id="formSearch">
        <div class="input-group mt-3">
            <label for="OrderId" class="input-group-text">N: Orden</label>
            <input type="search" class="form-control" placeholder="" name="OrderId" id="OrderId"
                   value="@ViewBag.OrderId">
            <button type="submit" class="input-group-text">Buscar</button>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @await Html.PartialAsync("_SortButtonComponent", Tuple.Create("OrderId", Html.DisplayNameFor(model => model.Order).ToString()))
            </th>
            <th>
                @await Html.PartialAsync("_SortButtonComponent", Tuple.Create("ProductName", Html.DisplayNameFor(model => model.Product.ProductName).ToString()))
            </th>
            <th>
                @await Html.PartialAsync("_SortButtonComponent", Tuple.Create("Quantity", Html.DisplayNameFor(model => model.Quantity).ToString()))
            </th>
            <th>
                @await Html.PartialAsync("_SortButtonComponent", Tuple.Create("Price", Html.DisplayNameFor(model => model.Price).ToString()))
            </th>
            <th>
                @await Html.PartialAsync("_SortButtonComponent", Tuple.Create("Discount", Html.DisplayNameFor(model => model.Discount).ToString()))
            </th>
            
            
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                        @await Html.PartialAsync("_ActionButtons", item.OrderItemId)
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_Pagination")