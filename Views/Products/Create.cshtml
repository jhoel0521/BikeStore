@model BikeStore.Models.Product

@{
    ViewData["Title"] = "Nuevo Producto";
}

<h1>Crear Producto</h1>

<hr />
<div class="d-flex justify-content-center">
    <div class="container-sm">
        <form asp-action="Create" class="row border border-4 rounded-1 p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3 col-4">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 col-4">
                <label asp-for="ModelYear" class="control-label"></label>
                <input asp-for="ModelYear" class="form-control" />
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 col-4">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("_SubmitButton", "Crear")
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
