@model BikeStore.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <div class="row">
        <div class="col-12">
            <div class="card" style="width=100%">
                <div class="card-body">
                    <h5 class="card-title">Datos Del Producto</h5>
                    <article class="card-text">
                        <h3>¿Estás seguro de que quieres eliminar este Producto?</h3>

                    </article>
                    <ul class="list-group list-group-flush px-4">
                        <li class="list-group-item">
                            <p><b> @Html.DisplayNameFor(model => model.ProductName):</b> @Html.DisplayFor(model => model.ProductName)</p>
                        </li>
                        <li class="list-group-item">
                            <p><b> @Html.DisplayNameFor(model => model.ModelYear):</b> @Html.DisplayFor(model => model.ModelYear)</p>
                        </li>
                        <li class="list-group-item">
                            <p><b> @Html.DisplayNameFor(model => model.Price):</b> @Html.DisplayFor(model => model.Price)</p>
                        </li>

                    </ul>
                    <div class="d-flex justify-content-end">
                        <form asp-action="Delete" class="btn-group">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <input type="hidden" asp-for="ProductId" />
                            <a asp-action="Index" class="btn btn-info">Volver a Lista</a>
                        </form>
                        <div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>