@model IEnumerable<BikeStore.Models.Customer>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Lista de Clientes</h1>

<div class="d-flex justify-content-end">
    <a asp-action="Create" class="btn btn-info">Crear Cliente</a>
</div>
<div class="d-flex justify-content-end">
    <form asp-action="Index" method="get">
        <div class="input-group mt-3">
            <input type="search" class="form-control" placeholder="Datos del cliente" name="searchString" aria-label="Recipient's username" aria-describedby="basic-addon2"
                   value="@ViewBag.SearchString">
            <button type="submit" class="input-group-text" id="basic-addon2">Buscar</button>
        </div>
    </form>
</div>


<hr />
<table class="table table-light table-striped table-hover" id="myTable">
    <thead class="text-center">
        <tr>
            <th>
                <form asp-action="Index" method="get">
                    <div class="input-group">
                        <input type="text" class="form-control" value="@Html.DisplayNameFor(model => model.FirstName)" readonly>
                        <input type="hidden" name="ColunOrd" value="FirstName" />
                        <input type="submit" class="input-group-text" name="ordenamiento" value="↑" />
                        <input type="submit" class="input-group-text" name="ordenamiento" value="↓" />
                    </div>
                </form>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    @await Html.PartialAsync("_ActionButtons", item.CustomerId)
                </td>
            </tr>
        }
    </tbody>
</table>
